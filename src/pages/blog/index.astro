---
import slugify from "slugify";
import Layout from "../layout.astro";
import { tags, sortedPosts, unslugify } from "../../utils/posts";
import { Image } from "astro:assets";
import background from "../../assets/background.svg";

let options = {
  lower: true,
  trim: true,
  remove: undefined as undefined,
};

export const prerender = true;
---

<Layout
  title="Yash D's Blogs"
  imgurl="https://yashd.in/preview.png"
  description="Blog page of Yash Deshpande :)"
  keywords="web development, portfolio, personal website, Yash, frontend, developer, design, gdg, gdg mad, gdg mumbai, devfest "
>
  <section class="px-6 sm:px-10 md:px-20 lg:px-40 pt-16 sm:pt-20 pb-8 sm:pb-10">
    <div class="max-w-[1920px] mx-auto">
      <div class="border-t border-b border-white/20 py-4 mb-8">
        <div class="flex items-center justify-between">
          <div class="flex-1 flex items-center gap-8">
            <span
              class="text-sm font-mono text-white/70 uppercase tracking-wide"
              >Blog Posts</span
            >
            <span
              class="text-xs font-mono text-white/50 uppercase tracking-wide"
              >Selected Writing</span
            >
          </div>
          <span class="text-xs font-mono text-white/50 uppercase tracking-wide"
            >Archive</span
          >
        </div>
      </div>

      <div class="flex items-center justify-between mb-8 sm:mb-12">
        <a
          href="/"
          class="group inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-undo2-icon lucide-undo-2"
          >
            <path d="M9 14 4 9l5-5"></path>
            <path d="M4 9h10.5a5.5 5.5 0 0 1-5.5 5.5a5.5 5.5 0 0 1-5.5 5.5H11"
            ></path>
          </svg>
          <span class="font-mono text-sm uppercase tracking-wide"
            >Back to Home</span
          >
        </a>
      </div>

      <h1
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight mb-8 sm:mb-12"
      >
        <span class="block uppercase tracking-tighter"
          >Blog <span
            class="font-serif font-thin italic normal-case text-transparent bg-gradient-pink bg-clip-text"
            >Posts</span
          >
        </span>
      </h1>

      <div class="mb-8 flex flex-wrap gap-3 justify-center">
        {
          tags.map((tag) => (
            <a
              href={`/tags/${slugify(tag, options)}`}
              class="px-4 py-2 rounded-full bg-white/10 text-white/80 text-sm transition-all duration-300 hover:bg-white/20 hover:text-white border border-white/20 hover:border-white/40 font-mono uppercase tracking-wide"
            >
              {unslugify(tag)}
            </a>
          ))
        }
      </div>

      <div class="max-w-[1920px] w-full mx-auto">
        <div class="border-t border-b border-white/20 py-3 mb-8">
          <div class="flex items-center justify-between">
            <div
              class="flex-1 flex items-center justify-between gap-6 max-w-[50%]"
            >
              <span
                class="text-xs font-mono text-white/60 uppercase tracking-wide"
                >Article</span
              >
              <span
                class="text-xs font-mono text-white/60 uppercase tracking-wide"
                >Description</span
              >
            </div>
            <span
              class="text-xs font-mono text-white/60 uppercase tracking-wide ml-8"
              >Tags</span
            >
          </div>
        </div>

        <ul class="list-none p-0 m-0 space-y-8">
          {
            sortedPosts.slice(0, 5).map((post, index) => (
              <li class="group relative">
                <a
                  href={`/blog/${post.slug}/`}
                  class="flex items-center justify-between py-6 border-b border-white/10 hover:border-white/30 transition-colors duration-500 cursor-pointer no-underline"
                >
                  <div class="flex-1 flex items-baseline gap-4 sm:gap-6">
                    <span class="font-serif block text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-cream/70 hover:text-cream transition-colors duration-700 ease-out tracking-tight group-hover:text-white">
                      {post.data.title}
                    </span>
                    <p class="text-cream/60 text-sm sm:text-lg md:text-xl leading-relaxed hidden sm:block group-hover:text-white/80 transition-colors duration-700">
                      {post.data.description}
                    </p>
                  </div>
                  <div class="flex items-center gap-4 ml-8">
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags &&
                        [...new Set(post.data.tags)]
                          .slice(0, 2)
                          .map((taggie) => (
                            <span class="px-3 py-1 rounded-full bg-white/10 text-white/60 text-xs border border-white/20 font-mono uppercase tracking-wide">
                              {unslugify(taggie)}
                            </span>
                          ))}
                    </div>
                    <div class="text-white/40 text-sm font-mono">
                      0{index + 1}
                    </div>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>
</Layout>

<style>
  .bg-gradient-pink {
    background-image: radial-gradient(at 30% 150%, #ff66c4 0, transparent 50%),
      radial-gradient(at 75% 120%, rgba(255, 102, 204, 0.9) 0, transparent 50%),
      radial-gradient(at 15% 150%, #e91e63 35%, transparent 70%),
      radial-gradient(at 85% 120%, #ff0080 55%, transparent 85%);
  }

  .project-name {
    position: relative;
    display: block;
    overflow: hidden;
    flex-shrink: 0;
  }

  .project-name::before {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    color: #ffffff;
    overflow: hidden;
    transition: width 0.8s cubic-bezier(0.84, 0, 0.08, 0.99);
    white-space: nowrap;
  }

  .project-link:hover .project-name::before {
    width: 100%;
  }

  ul li a {
    text-decoration: none !important;
  }

  @media (max-width: 768px) {
    .projects-section {
      min-height: auto;
      padding-top: 2rem;
      padding-bottom: 2rem;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    h1 {
      font-size: 2rem !important;
      line-height: 1.2 !important;
      margin-bottom: 1.5rem !important;
    }

    /* Mobile project adjustments */
    .group a {
      padding: 1rem 0 !important;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
    }

    .group a:hover {
      border-bottom-color: rgba(255, 255, 255, 0.3) !important;
    }

    .font-serif {
      font-size: 1.5rem !important;
      line-height: 1.2 !important;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.75rem !important;
    }

    .font-serif {
      font-size: 1.25rem !important;
    }
  }
</style>
