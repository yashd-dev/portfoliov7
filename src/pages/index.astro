            projects.slice(0, 5).map((project, index) => (
              <li class="project-item-mobile group relative">
                <a
                  href={project.link || "#"}
                  target="_blank"
                  class="project-link-mobile flex items-center justify-between py-4 border-b border-white/10 hover:border-white/30 transition-colors duration-500 cursor-pointer no-underline"
                  data-project={index}
                >
                  <div class="flex-1">
                    <span
                      class="project-name-mobile block text-2xl font-bold text-cream/70 hover:text-cream transition-colors duration-700 ease-out uppercase tracking-tight"
                      data-text={project.name}
                    >
                      {project.name}
                    </span>
                  </div>
                  <div class="flex items-center gap-4">
